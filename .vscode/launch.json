{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/app.go",
            "env": {},
            "args": [
                "--title", "Test article with a very very long title because I want to test word wrapping",
                "--siteName", "Test Blog",
                "--colorBg", "#665eba",
                "--colorBgOverlay", "#665eba9f",
                "--paddingX", "50",
                "--paddingY", "50",
                "--lineSpacing", "1.75",
                "--imagePath", "images/wallpaper.jpg",
                "--logoPath", "images/logo-32.png",
                "--logoX", "50",
                "--logoY", "50",
                "--paddingYSite", "25",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node.js App",
            "program": "${workspaceFolder}/index.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
